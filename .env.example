# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here # Your Supabase project URL
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here # Public anon key for client-side Supabase
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here # Service role key for server-side operations (keep secure!)

# Application Configuration
NEXT_PUBLIC_VERCEL_URL=your_vercel_url_here # Vercel deployment URL (if using Vercel)
NEXT_PUBLIC_APP_NAME=Basic Intelligence Community School # Application name for display
NEXT_PUBLIC_CDN_URL=your_cdn_url_here # CDN URL for static assets

# Environment
NODE_ENV=development # Environment: development, production, or test

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn_here # Sentry DSN for error tracking

# Payment Providers
PAYSTACK_SECRET=your_paystack_secret_key_here # Paystack secret key for Nigerian payments
STRIPE_SECRET=your_stripe_secret_key_here # Stripe secret key for international payments

# Email Service
EMAIL_SERVICE_API_KEY=your_email_service_key_here # API key for email service (Resend, SendGrid, etc.)

# Currency Exchange API (for multi-currency support)
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key_here # API key for currency conversion

# PayPal Integration (if implemented)
PAYPAL_CLIENT_ID=your_paypal_client_id_here # PayPal client ID for payment integration
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here # PayPal client secret for payment integration

# Admin Configuration
ADMIN_EMAIL=admin@example.com # Default admin email
ADMIN_PASSWORD=your_secure_admin_password_here # Default admin password

# Security
JWT_SECRET=your_jwt_secret_here # Secret key for JWT token generation
ENCRYPTION_KEY=your_encryption_key_here # Key for data encryption

# Database (if using external database)
DATABASE_URL=your_database_url_here # Database connection string

# File Storage
UPLOAD_PATH=./uploads # Local file upload path
MAX_FILE_SIZE=5242880 # Maximum file size in bytes (5MB)

# Session Configuration
SESSION_SECRET=your_session_secret_here # Secret for session management
COOKIE_SECRET=your_cookie_secret_here # Secret for cookie encryption

# CORS Configuration
CORS_ORIGIN=http://localhost:3000 # Allowed CORS origins

# Feature Flags
FEATURE_MULTI_CURRENCY=true # Enable/disable multi-currency support
FEATURE_PAYPAL_PAYMENTS=false # Enable/disable PayPal payments
FEATURE_STRIPE_PAYMENTS=false # Enable/disable Stripe payments
